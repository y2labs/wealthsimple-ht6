{
    "extends": [
        "prettier",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "rules": {
        "no-undef": 2
    },
    "settings": {
        "import/resolver": {
            "babel-module": {
                "alias": {
                    "~": "./src"
                }
            }
        }
    }
}